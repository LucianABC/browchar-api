model CampaignCharacter {
  id          String @id @default(cuid())
  campaignId  String
  characterId String

  // Para marcar NPCs o personajes “de la campaña”
  isNpc Boolean @default(false)

  // Metadata útil (opcional)
  notes     String?
  createdAt DateTime @default(now())

  campaign  Campaign  @relation(fields: [campaignId], references: [id])
  character Character @relation(fields: [characterId], references: [id])

  @@unique([campaignId, characterId]) // el mismo pj no se repite en la misma campaña
  @@index([campaignId])
  @@index([characterId])
}
