model Game {
  id        String   @id @default(cuid())
  systemId  String
  key       String   @unique  // "MASKS", "AW", "DND5E_PHB", "VTM5"
  name      String            // "Masks: A New Generation"
  createdAt DateTime @default(now())

  system    System    @relation(fields: [systemId], references: [id])
  templates Template[]
  campaigns    Campaign[]

  @@index([systemId])
}