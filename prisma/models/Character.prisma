model Character {
  id              String   @id @default(cuid())
  name            String
  ownerId         String
  templateId      String
  templateVersion Int
  values          Json
  tableId         String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  deletedAt       DateTime?

  owner    User     @relation(fields: [ownerId], references: [id])
  template Template @relation(fields: [templateId], references: [id])

  @@index([ownerId])
}